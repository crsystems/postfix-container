pipeline {
        agent any 
        stages {
                stage('build') {
			environment {
				DOCKER_LOGIN = credentials('docker-login')

			}
                        steps {
				sh 'docker build --no-cache -t crsystems/postfix:latest .'
				sh 'docker login -u $DOCKER_LOGIN_USR -p $DOCKER_LOGIN_PSW'
				sh 'docker push crsystems/postfix:latest'
                        }
                }
        }
}
